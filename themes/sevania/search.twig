        <span class="date updated small text-muted"> {{ search['createdAt'] }}</span>
        <p class="alert border rounded-0">{{ description }}</p>
        <ul class="list-side list-item" itemscope itemtype='http://schema.org/MusicPlaylist'>
			{% for item in search['items'] %}
            <li class="media align-items-center pb-2">
                <img src="{{ photonResize('https://ytimg.googleusercontent.com/vi/' ~ item['id'] ~ '/mqdefault.jpg', '60', '60', 2) }}" width="60" class="rounded-circle shadow-sm mr-2">
                <div class="media-body">
                    <h3 itemprop="name"><a href="{{ download_permalink(item['id']) }}" title="{{ item['title'] }}">{{ item['title'] }}</a></h3>
                    <p class="text-muted small mt-0">Youtube Mp3 |
                        <i class="fa fa-clock-o"></i> {{ item['duration'] }} | <i class="fa fa-hdd-o"></i> {{ item['size'] }}
                        <br>
                        <a href="{{ download_permalink(item['id']) }}" title="Download {{ item['title'] }}" class="btn title-h border-0 btn-sm p-1 px-3 mr-1"><i class="fa fa-download"></i> Download</a>
                        <a href="{{ download_permalink(item['id']) }}" title="Play {{ item['title'] }}" class="btn btn-secondary border-0 p-1 px-3 btn-sm"><i class="fa fa-play"></i> Play</a>
                    </p>
                </div>
            </li>
			{% endfor %}
        </ul>
        <h2 class="h5 font-weight-normal title-h"><i class="fa fa-music"></i> Pencarian Populer</h2>
        <ul class="list-side border px-2">
            {% for item in getTerms('20')['items'] %}
                <li>&rsaquo; <a href="{{ search_permalink(item) }}" title="{{ item }}"> {{ item }} </a></li>
            {% endfor %}
        </ul>
    </main>
{% endblock %}