{% extends "layouts/main.twig" %}
{% block content %}
    <main class="col-md-8 mb-4">
    <h1 class="title-full h5">Download {{ query }} Mp3</h1>
    <div class="d-block border-bottom mb-2"></div>
    <p class="quote border p-2 mb-4" align="justify">
        {{ description }}
    </p>
    <div class="d-block">
        {% for item in search['items'] %}
            <article class="music_article align-items-center d-flex pb-2">
                <img src="{{ photonResize('https://ytimg.googleusercontent.com/vi/' ~ item['id'] ~ '/mqdefault.jpg', '60', '60', 2) }}" width="60" height="60" class="rounded-circle shadow-sm mr-2" />
                <div>
                    <h2 class="h6 font-weight-bold">{{ item['title'] }}</h2>
                    <a href="{{ single_permalink(item['id'], item['title']) }}" title="{{ item['title'] }}" class="btn btn-success border-0 btn-sm p-1 px-2 m-2">âœ” Download</a>
                </div>
            </article>
            <p align="center" class="text-muted p-2 my-2">
                {{ strLimit(item['description'], '150') }}
            </p>
        {% endfor %}
        {# Comment #}
        <div class="public-response">
            <h5>Public Response On {{ query }}</h3>
            <div class="comments"></div>
        </div>
    </div>
</main>
<aside class="col-md-4 mb-4">
    <h2 class="title-h h5">Download Lagu Terpopuler</h2>
    <ul class="list-side">
    {% for item in getTerms('30')['items'] %}
        <li>
            <a href="{{ search_permalink(item) }}" title="{{ ucwords(item) }}">
                <span>{{ ucwords(item) }}</span>
            </a>
        </li>
    {% endfor %}
    </ul>
</aside>
{% endblock %}